          },
          "response": []
        },
        {
          "name": "Delete Account",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let json = {};",
                  "try {",
                  "  json = pm.response.json();",
                  "  pm.test('계정 삭제 완료', function () {",
                  "    pm.expect(json.message || '').to.include('deleted');",
                  "  });",
                  "  pm.environment.unset('accessToken');",
                  "  pm.environment.unset('accessTokenExpiresAt');",
                  "  pm.environment.unset('refreshToken');",
                  "  pm.environment.unset('refreshExpiresAt');",
                  "} catch (err) {",
                  "  console.warn('응답 파싱 실패', err);",
                  "}",
                  ""
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "profile"
              ]
            }
          },
          "response": []
