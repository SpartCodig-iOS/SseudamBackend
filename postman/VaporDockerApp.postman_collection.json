                "exec": [
                  "let json = {};",
                  "try {",
                  "  json = pm.response.json();",
                  "  const data = json.data || {};",
                  "  if (data.accessToken) {",
                  "    pm.environment.set('accessToken', data.accessToken);",
                  "    pm.environment.set('accessTokenExpiresAt', data.expiresAt || '');",
                  "    pm.environment.set('refreshToken', data.refreshToken || '');",
                  "    pm.environment.set('refreshExpiresAt', data.refreshExpiresAt || '');",
