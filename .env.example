# Server
PORT=8080
NODE_ENV=development
# 개발 기본은 info, 프로덕션에서는 LOG_LEVEL=info를 명시적으로 설정
LOG_LEVEL=info

# Database (use DATABASE_URL or individual params)
DATABASE_URL=postgresql://postgres.wqdizhgmgsjzvvdiflbg:[YOUR-PASSWORD]@aws-1-ap-southeast-1.pooler.supabase.com:6543/postgres
DATABASE_REQUIRE_TLS=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false
DATABASE_FORCE_IPV4=true

# Postgres manual overrides (optional when DATABASE_URL not provided)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=postgres

# JWT
JWT_SECRET=replace-with-strong-secret
